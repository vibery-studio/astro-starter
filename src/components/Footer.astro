---
/**
 * Footer - Dark OLED Luxury (Tailwind)
 * Premium, minimal, with subtle glow accents
 */
import { COMPANY_NAME, COMPANY_EMAIL, COMPANY_PHONE, COMPANY_TAGLINE } from '../consts';
import { getPath } from '../utils/paths';

const currentYear = new Date().getFullYear();

const footerLinks = [
	{
		title: 'Menu',
		links: [
			{ href: '/#menu', label: 'Cà phê phin' },
			{ href: '/#menu', label: 'Đồ uống đặc biệt' },
			{ href: '/#menu', label: 'Bánh ngọt' },
		]
	},
	{
		title: 'Về chúng tôi',
		links: [
			{ href: '/about', label: 'Câu chuyện' },
			{ href: '/blog', label: 'Blog' },
			{ href: '/contact', label: 'Địa chỉ' },
		]
	}
];

const socialLinks = [
	{ href: 'https://facebook.com', label: 'Facebook' },
	{ href: 'https://linkedin.com', label: 'LinkedIn' },
	{ href: 'https://github.com', label: 'GitHub' },
];
---

<footer class="relative bg-[#1A1512] border-t border-[#E6D5C3]/15 pt-16 pb-8 overflow-hidden">
	<!-- Glow effect -->
	<div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-48 bg-[radial-gradient(ellipse_50%_100%_at_50%_0%,rgba(160,113,77,0.08)_0%,transparent_70%)] pointer-events-none"></div>

	<div class="relative max-w-7xl mx-auto px-4 md:px-8 lg:px-12">
		<!-- Main footer -->
		<div class="grid grid-cols-1 md:grid-cols-[2fr_1fr_1fr] gap-10 md:gap-16 pb-12">
			<!-- Brand -->
			<div class="flex flex-col gap-4">
				<a href={getPath('/')} class="flex items-center gap-3 no-underline w-fit">
					<span class="flex items-center justify-center w-8 h-8 bg-gradient-to-br from-[#A0714D] via-[#C49463] to-[#E6D5C3] rounded-lg font-display text-base font-bold text-[#1A1512]">☕</span>
					<span class="font-display text-lg font-semibold text-[#F5EFE7] tracking-tight">{COMPANY_NAME}</span>
				</a>
				<p class="text-sm text-[#D4C1AC] max-w-[280px] leading-relaxed">{COMPANY_TAGLINE}</p>
				<div class="flex flex-col gap-2 mt-2">
					<a href={`mailto:${COMPANY_EMAIL}`} class="inline-flex items-center gap-2 text-[#A08976] no-underline text-sm transition-colors hover:text-[#A0714D]">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" class="opacity-60">
							<path d="M2 4L8 9L14 4M2 12H14V4H2V12Z" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
						{COMPANY_EMAIL}
					</a>
					<a href={`tel:${COMPANY_PHONE.replace(/\s/g, '')}`} class="inline-flex items-center gap-2 text-[#A08976] no-underline text-sm transition-colors hover:text-[#A0714D]">
						<svg width="16" height="16" viewBox="0 0 16 16" fill="none" class="opacity-60">
							<path d="M6.5 3H3.5C2.94772 3 2.5 3.44772 2.5 4V12C2.5 12.5523 2.94772 13 3.5 13H12.5C13.0523 13 13.5 12.5523 13.5 12V4C13.5 3.44772 13.0523 3 12.5 3H9.5M6.5 3V2M6.5 3H9.5M9.5 3V2" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
						</svg>
						{COMPANY_PHONE}
					</a>
				</div>
			</div>

			<!-- Footer links -->
			{footerLinks.map((section) => (
				<div>
					<h4 class="font-sans text-xs font-semibold tracking-widest uppercase text-[#A08976] mb-4">{section.title}</h4>
					<ul class="list-none m-0 p-0 flex flex-col gap-3">
						{section.links.map((link) => (
							<li>
								<a href={getPath(link.href)} class="text-[#D4C1AC] no-underline text-sm transition-colors hover:text-[#F5EFE7]">{link.label}</a>
							</li>
						))}
					</ul>
				</div>
			))}
		</div>

		<!-- Divider -->
		<div class="h-px bg-gradient-to-r from-transparent via-[#E6D5C3]/15 to-transparent mb-8"></div>

		<!-- Bottom -->
		<div class="flex flex-col md:flex-row justify-between items-center gap-4">
			<p class="text-sm text-[#A08976] m-0">
				&copy; {currentYear} {COMPANY_NAME}. All rights reserved.
			</p>
			<div class="flex gap-6">
				{socialLinks.map((social) => (
					<a
						href={social.href}
						target="_blank"
						rel="noopener noreferrer"
						aria-label={social.label}
						class="text-sm text-[#A08976] no-underline transition-colors hover:text-[#A0714D]"
					>
						{social.label}
					</a>
				))}
			</div>
		</div>
	</div>
</footer>
